<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="es.jaime.gateway.activeorders._shared.domain.ActiveOrder" table="activeorders">
        <composite-id name="activeorderId" class="es.jaime.gateway.activeorders._shared.domain.ActiveOrderID" access="field">
            <key-property column="activeorderId" name="value" length="10" access="field"/>
        </composite-id>

        <component name="ticker" class="es.jaime.gateway.activeorders._shared.domain.ActiveOrderTicker" access="field">
            <property column="ticker" name="value" type="string" access="field"/>
        </component>

        <component name="clientId" class="es.jaime.gateway.activeorders._shared.domain.ActiveOrderClientID" access="field">
            <property column="clientId" name="value" type="string" access="field"/>
        </component>

        <component name="date" class="es.jaime.gateway.activeorders._shared.domain.ActiveOrderDate" access="field">
            <property column="date" name="value" type="string" access="field"/>
        </component>

        <component name="quantity" class="es.jaime.gateway.activeorders._shared.domain.ActiveOrderQuantity" access="field">
            <property column="quantity" name="value" type="integer" access="field"/>
        </component>

        <component name="type" class="es.jaime.gateway.activeorders._shared.domain.ActiveOrderType" access="field">
            <property column="type" name="valueString" type="string" access="field"/>
        </component>

        <component name="executionPrice" class="es.jaime.gateway.activeorders._shared.domain.ActiveOrderExecutionPrice" access="field">
            <property column="executionPrice" name="value" type="double" access="field"/>
        </component>

        <component name="status" class="es.jaime.gateway.activeorders._shared.domain.ActiveOrderStatus" access="field">
            <property column="status" name="valueString" type="string" access="field"/>
        </component>
    </class>
</hibernate-mapping>
