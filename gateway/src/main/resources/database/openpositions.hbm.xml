<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="es.jaime.gateway.positions.open._shared.domain.OpenPosition" table="open_positions">
        <composite-id name="positionId" class="es.jaime.gateway.positions._shared.PositionId" access="field">
            <key-property column="positionId" name="value" length="50" access="field"/>
        </composite-id>

        <component name="clientId" class="es.jaime.gateway.positions._shared.PositionClientId" access="field">
            <property column="clientId" name="value" type="string" access="field"/>
        </component>

        <component name="ticker" class="es.jaime.gateway.positions._shared.PositionTicker" access="field">
            <property column="ticker" name="value" type="string" access="field"/>
        </component>

        <component name="quantity" class="es.jaime.gateway.positions._shared.PositionQuantity" access="field">
            <property column="quantity" name="value" type="integer" access="field"/>
        </component>

        <component name="openingPrice" class="es.jaime.gateway.positions._shared.PositionOpeningPrice" access="field">
            <property column="openingPrice" name="value" type="double" access="field"/>
        </component>

        <component name="openingDate" class="es.jaime.gateway.positions._shared.PositionOpeningDate" access="field">
            <property column="openingDate" name="value" type="string" access="field"/>
        </component>
    </class>
</hibernate-mapping>
