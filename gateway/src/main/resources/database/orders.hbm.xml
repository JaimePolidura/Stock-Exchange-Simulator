<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="es.jaime.gateway.orders.orders._shared.domain.Order" table="orders">
        <composite-id name="orderId" class="es.jaime.gateway.orders.orders._shared.domain.OrderId" access="field">
            <key-property column="orderId" name="value" length="10" access="field"/>
        </composite-id>

        <component name="clientId" class="es.jaime.gateway.orders.orders._shared.domain.OrderClientId" access="field">
            <property column="clientId" name="value" type="string" access="field"/>
        </component>

        <component name="date" class="es.jaime.gateway.orders.orders._shared.domain.OrderDate" access="field">
            <property column="date" name="value" type="string" access="field"/>
        </component>

        <component name="orderTypeId" class="es.jaime.gateway.orders.ordertypes.domain.OrderTypeId" access="field">
            <property column="orderTypeId" name="value" type="int" access="field"/>
        </component>

        <component name="body" class="es.jaime.gateway.orders.orders._shared.domain.OrderBody" access="field">
            <property column="body" name="value" type="string" access="field"/>
        </component>
    </class>
</hibernate-mapping>
