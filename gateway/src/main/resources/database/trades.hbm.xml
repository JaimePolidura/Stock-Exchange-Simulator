<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="es.jaime.gateway.trades._shared.domain.Trade" table="trades">
        <composite-id name="tradeId" class="es.jaime.gateway.trades._shared.domain.TradeId" access="field">
            <key-property column="tradeId" name="value" length="50" access="field"/>
        </composite-id>

        <component name="clientId" class="es.jaime.gateway.trades._shared.domain.TradeClientId" access="field">
            <property column="clientId" name="value" type="string" access="field"/>
        </component>

        <component name="ticker" class="es.jaime.gateway.trades._shared.domain.TradeTicker" access="field">
            <property column="ticker" name="value" type="string" access="field"/>
        </component>

        <component name="openingPrice" class="es.jaime.gateway.trades._shared.domain.TradeOpeningDate" access="field">
            <property column="openingPrice" name="value" type="double" access="field"/>
        </component>

        <component name="openingDate" class="es.jaime.gateway.trades._shared.domain.TradeOpeningDate" access="field">
            <property column="openingDate" name="value" type="string" access="field"/>
        </component>

        <component name="quantity" class="es.jaime.gateway.trades._shared.domain.TradeQuantity" access="field">
            <property column="quantity" name="value" type="integer" access="field"/>
        </component>
    </class>
</hibernate-mapping>
